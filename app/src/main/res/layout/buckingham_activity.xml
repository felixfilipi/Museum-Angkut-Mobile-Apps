<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buckingham_activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="349dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text=" Dengan latar istana Buckingham, pengunjung akan merasa seperti berada di negara Inggris. Terdapat koleksi berbagai alat transportasi terkenal yang memiliki gaya khas Inggris seperti Mini Cooper, Raleigh, Filir, Rolls Royce, Land Rover, Royal Enfield, Austin, dan banyak lagi. Koleksi yang paling bernilai tinggi dan ditandai ada beberapa, salah satunya mobil ceremonial Land Rover dan Bentley Mark yang pernah digunakan Ratu Elizabeth pada kunjungan ke Australia tahun 1954. Ceremonial Land Rover adalah kendaraan yang paling sering digunakan oleh pasukan militer Australia.
Buckingham Palace Garden
Kereta Buckingham"

        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="351dp"
        android:layout_height="249dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buckingham" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"

        android:gravity="center_horizontal"
        android:text="BUCKINGHAM PALACE"
        android:textColor="#151515"
        android:textColorHighlight="#8E3131"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>